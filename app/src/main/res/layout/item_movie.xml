<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/define_dimen_10"
    android:layout_marginEnd="@dimen/define_dimen_10"
    app:cardCornerRadius="@dimen/define_dimen_6"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/define_dimen_200">

            <ImageView
                android:id="@+id/img_movie"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img_ic_favorite"
                android:src="@drawable/ic_favorite_on"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/define_dimen_10"
                android:layout_marginBottom="@dimen/define_dimen_10"
                android:layout_width="@dimen/define_dimen_35"
                android:layout_height="@dimen/define_dimen_35"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_movie_name"
            android:text="@string/app_name"
            android:gravity="center"
            android:layout_margin="@dimen/define_dimen_8"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/define_dimen_14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>