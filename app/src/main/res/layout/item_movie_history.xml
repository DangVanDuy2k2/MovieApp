<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/define_dimen_6"
    android:layout_marginTop="@dimen/define_dimen_10"
    android:layout_marginEnd="@dimen/define_dimen_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/item_movie_history"
            android:layout_toStartOf="@+id/img_delete"
            android:layout_marginEnd="@dimen/define_dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_movie_history"
                android:src="@drawable/ic_splash"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/define_dimen_100"
                android:padding="@dimen/define_dimen_5"
                android:layout_height="@dimen/define_dimen_120"/>

            <TextView
                android:id="@+id/txt_title_history"
                android:text="@string/app_name"
                android:layout_toEndOf="@+id/img_movie_history"
                android:layout_marginStart="@dimen/define_dimen_5"
                android:layout_marginTop="@dimen/define_dimen_5"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_xnormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_delete"
            android:src="@drawable/ic_delete"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/define_dimen_40"
            android:layout_height="@dimen/define_dimen_40"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>